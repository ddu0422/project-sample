pipeline {
    agent any
    environment {
        GITHUB_URL = 'https://github.com/ddu0422/project-sample'
        REGION = 'ap-northeast-2'
    }

    stages {
        stage('Git Clone') {
            steps {
                git branch: 'main', credentialsId: 'GitHubCredentials', url: "${GITHUB_URL}"
            }
        }
        stage('Build') {
            steps {
                step {
                    withAWS(role: 'JenkinsRole', roleAccount: '767397978317', duration: 900, roleSessionName: 'jenkins-session') {
                        sh 'echo "hello"'
                        sh 'aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin 767397978317.dkr.ecr.${REGION}.amazonaws.com'
                }
                withCredentials([aws(credentialsId: 'BuildCredentials')]) {
                    sh 'aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin 767397978317.dkr.ecr.${REGION}.amazonaws.com'
                }
                withGradle {
                    sh './gradlew jib'
                }
            }
        }
    }
}
