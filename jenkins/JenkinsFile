pipeline {
    agent any
    environment {
        GITHUB_URL = 'https://github.com/ddu0422/project-sample'
        REGION = 'ap-northeast-2'
    }

    stages {
        stage('Git Clone') {
            steps {
                git branch: 'main', credentialsId: 'GitHubCredential', url: "${GITHUB_URL}"
            }
        }
        stage('Build') {
            steps {
                withCredentials([aws(credentialsId: 'BuildCredential')]) {
                    sh 'aws ecr get-login-password --region ${REGION} | docker login --username AWS --password-stdin 767397978317.dkr.ecr.${REGION}.amazonaws.com'
                }
                withGradle {
                    sh './gradlew jib'
                }
            }
        }
    }
}
