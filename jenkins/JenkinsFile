pipeline {
    agent any
    environment {
        GITHUB_URL = 'https://github.com/ddu0422/project-sample'
        REGION = 'ap-northeast-2'
    }

    stages {
        stage('Clear') {
            steps {
                sh 'docker logout'
            }
        }
        stage('Git Clone') {
            steps {
                git branch: 'develop', credentialsId: 'GitHubCredentials', url: "${GITHUB_URL}"
            }
        }
        stage('Build') {
            steps {
                withCredentials([aws(credentialsId: 'BuildCredentials')]) {
                    sh 'aws sts get-caller-identity'
                    sh 'aws ecr get-login-password --region ap-northeast-2 | docker login --username AWS --password-stdin 767397978317.dkr.ecr.ap-northeast-2.amazonaws.com'
                }
                withGradle {
                    sh './gradlew jib'
                }
            }
        }
    }
}
